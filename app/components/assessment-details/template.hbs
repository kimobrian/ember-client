<div class="card">
  <div class="card-body">
    <h4 class="card-title">{{details.fellow}}'s Assessment Details</h4>
    <div class='flex-row'>
          <div class='flex-column-left'>Assessor</div>
          <div class='flex-column-right'>{{details.assessor}}</div>
        </div>
        <div class='flex-row'>
          <div class='flex-column-left'>Fellow</div>
          <div class='flex-column-right'>{{details.fellow}}</div>
        </div>
        <div class='flex-row'>
          <div class='flex-column-left'>Score</div>
          <div class='flex-column-right'>{{details.score}}%</div>
        </div>
        <div class='flex-row'>
          <div class='flex-column-left'>Status</div>
          <div class='flex-column-right'>{{details.status}}</div>
        </div>
  </div>
</div>
